@{
    ViewBag.Title = "Login";
}

<h2>Авторизация</h2>
<form action="@Url.Action("Login", "User")" method="POST">
    <div>
        <label>Логин</label>
        <input type="text" name="login"/>
    </div>

    <div>
        <label>Пароль</label>
        <input type="password" name="password" />
    </div>

    <div>
        <button type="submit">Войти</button>
    </div>

</form>

@if (Session["UserId"] != null)
{
    <span>Авторизован</span>
}